pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Deliver for development') {
            when {
                branch 'develop'
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy for production') {
            when {
                branch 'master'
            }
            steps {
                sh 'mvn clean install'
            }
        }
    }
}