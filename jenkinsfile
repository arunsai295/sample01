pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                mvn clean compile
            }
        }
        stage('Test') {
            steps {
                mvn clean compile
            }
        }
        stage('Deliver for development') {
            when {
                branch 'develop'
            }
            steps {
                mvn clean package
            }
        }
        stage('Deploy for production') {
            when {
                branch 'master'
            }
            steps {
                mvn clean install
            }
        }
    }
}